                    <li value="NO">
                        <set var="resultado">Fecha no valida. Accion cancelada.</set>
                        <set name="topic">unknown</set>
                    </li>
                    <li>
                        <set name="fecha_evento"><get var="validate"/></set>
                        <set var="eventos"><map name="evento"><get name="fecha_evento"/></map></set>
